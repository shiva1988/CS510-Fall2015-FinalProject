#include <iostream> 
#include <boost/numeric/ublas/matrix.hpp>

using namespace std; 
using namespace boost::numeric::ublas;
class cplane{
	public:
		long double Xmin; 
		long double Xmax; 
		long double Ymin; 
		long double Ymax; 
		unsigned long int Xpoints; 
		unsigned long int Ypoints; 
		matrix<std::complex<long double> > Mat;
		cplane(long double xmin, long double xmax, long double ymin, long double ymax, unsigned long int xpoints, unsigned long int  ypoints);
};
